<body style="text-align:center">
  <header>Edit Your Goal!</header>
  <div style="font-size: 30px; line-height: 30px; color:goldenrod">
    <%= form_tag "/goal/#{params[:id]}/edit", method: :patch do %>
    <%= label_tag :title %>
    <%= text_field_tag :title, "#{@goal.title}" %>
    <br>
    <br>
    <%= label_tag :cost %>
    <%= text_field_tag :cost, "#{@goal.cost}" %>
    <br>
    <br>
    <%= submit_tag 'Edit This Goal' %>
    <% end %>
  </div>
</body >
